{
  "manifest_version": 3,
  "name": "SingIt",
  "description": "Get lyrics, subtitles, chords for songs on Youtube",
  "version": "1.0.0",
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "action": {
    "default_title": "SingIt",
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["webNavigation", "tabs"],
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/watch*"],
      "js": ["contentScript.js"]
    }
  ]
}
